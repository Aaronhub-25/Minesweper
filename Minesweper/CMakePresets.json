{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "description": "Default settings for my make project",
            "hidden": false,
            "generator": "Unix Makefiles",
            "binaryDir": "./build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "MAKE_EXPORT_COMPILE_COMMANDS": "YES"
            }
        },
        {
            "name": "GCC 14.2.0 x86_64-linux-gnu",
            "displayName": "GCC 14.2.0 x86_64-linux-gnu",
            "description": "Compiler werden verwendet: C = /usr/bin/gcc, CXX = /usr/bin/g++",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}